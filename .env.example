# UserFrosting Environment Configuration
# Copy this file to .env and fill in your environment-specific values
# NEVER commit .env to version control

# ============================================================================
# Application Configuration
# ============================================================================

APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# ============================================================================
# Database Configuration
# ============================================================================

DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=userfrosting
DB_USERNAME=root
DB_PASSWORD=

# ============================================================================
# Mail Configuration
# ============================================================================

MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# Security
# ============================================================================

# Generate a secure random key for sessions and encryption
# You can generate one with: php -r "echo bin2hex(random_bytes(32));"
APP_KEY=

# ============================================================================
# Session Configuration
# ============================================================================

SESSION_LIFETIME=120
SESSION_DRIVER=file

# ============================================================================
# Cache Configuration
# ============================================================================

CACHE_DRIVER=file

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=debug
